#%Module

#conflict .cmag

# Environment

set base_dir $env(SIM_HOME)/$env(OSRELEASE)/$env(SIM_SUB_DIR)/$env(SIM_VERSION)

set dir $base_dir/cmag/${version}

setenv CMAG_VERSION $version
setenv C12BFIELDS $dir

proc ModulesTest { } {
	
	set var CMAG
	set installation_dir  [ getenv C12BFIELDS ]/lib
	set retcode 1
	
	# exit if is_loaded is empty
	if { [module-info loaded physlibs] == "" } {
		puts stderr "physlibs is not loaded. Use module load physlibs to load it."
		puts stderr ""
		return 0
	}
	
	puts stderr ""
	if { [file isdirectory $installation_dir ] } {
		puts stderr " Y $var \t\t $installation_dir"
	} else {
		puts stderr " N $var \t\t $installation_dir"
		set retcode 0
	}
	
	return $retcode
}

