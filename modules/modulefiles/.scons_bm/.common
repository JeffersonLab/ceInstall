#%Module

#conflict .scons_bm

# Environment

set base_dir $env(PHYS_HOME)/noarch

set dir $base_dir/scons_bm/${version}


setenv SCONS_BM_VERSION $version

setenv SCONS_BM $dir
setenv SCONSFLAGS  "--site-dir=$dir"

prepend-path PYTHONPATH $dir

proc ModulesTest { } {
	
	set var SCONS_BM
	set installation_dir  [ getenv SCONS_BM ]
	set retcode 1
	
	# exit if is_loaded is empty
	if { [module-info loaded physlibs] == "" } {
		puts stderr "physlibs is not loaded. Use module load physlibs to load it."
		puts stderr ""
		return 0
	}
	
	puts stderr ""
	if { [file isdirectory $installation_dir ] } {
		puts stderr " Y $var $installation_dir"
	} else {
		puts stderr " N $var $installation_dir"
		set retcode 0
	}
	
	return $retcode
}

