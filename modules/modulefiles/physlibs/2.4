   clhep/${clhep_version}
   evio/${evio_version}
   hipo/${hipo_version}
   geant4/${geant4_version}
   g4data/${g4data_version}
   gemc/${gemc_version}
   mlibrary/${mlibrary_version}
   qt/${qt_version}
   root/${root_version}
   scons_bm/${scons_bm_version}
   xercesc/${xercesc_version}
   "

