#%Module

prereq --tag 2.4, 2.5, 2.6 physlibs

conflict xercesc
set version 3.2.3

proc ModulesHelp { } {
    global version
    puts stderr "
    Loads xercesc environment variables
    Version: $version
"
}

module-whatis "Loads xercesc/${version}"

set base_dir $env(PHYS_HOME)/$env(OSRELEASE)/$env(PHYS_SUB_DIR)/$env(PHYS_VERSION)

set dir $base_dir/xercesc/${version}

# set LD_LIBRARY_PATH depending on OS
case $(uname -s) in
    Linux)
        prepend-path LD_LIBRARY_PATH $dir/lib64
        ;;
    Darwin)
        prepend-path LD_LIBRARY_PATH $dir/lib
        ;;
    *)
        echo "Unsupported OS: $(uname -s)"
        exit 1
        ;;
esac

setenv XERCESC_VERSION $version
setenv XERCESCROOT $dir

