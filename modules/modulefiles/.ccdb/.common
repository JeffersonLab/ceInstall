#%Module

conflict .ccdb

# Environment

set base_dir $env(PHYS_HOME)/$env(OSRELEASE)/$env(PHYS_SUB_DIR)/$env(PHYS_VERSION)

set dir $base_dir/ccdb/${version}

prepend-path LD_LIBRARY_PATH $dir/lib
if { [uname sysname] == "Darwin" } {
	prepend-path DYLD_LIBRARY_PATH $dir/lib
}

prepend-path PATH $dir/bin
prepend-path PYTHONPATH $dir/python

setenv CCDB_VERSION $version
setenv CCDB_HOME $dir

if {  [info exists ::env(USER)] } {
	setenv CCDB_USER $env(USER)
}

setenv CCDB_CONNECTION mysql://clas12reader@clasdb-farm.jlab.org/clas12

proc ModulesTest { } {
	
	set var CCDB
	set installation_dir  [ getenv CCDB_HOME ]/lib
	set retcode 1
	
	# exit if is_loaded is empty
	if { [module-info loaded physlibs] == "" } {
		puts stderr "physlibs is not loaded. Use module load physlibs to load it."
		puts stderr ""
		return 0
	}
	
	puts stderr ""
	if { [file isdirectory $installation_dir ] } {
		puts stderr " Y $var $installation_dir"
	} else {
		puts stderr " N $var $installation_dir"
		set retcode 0
	}
	
	return $retcode
}

