#%Module

conflict .mlibrary

proc ModulesHelp { } {
    global version
    puts stderr "
    Loads mlibrary environment variables
    Version: $version
"
}

module-whatis "Loads mlibrary/${version}"

# Environment

set base_dir $env(PHYS_HOME)/$env(OSRELEASE)/$env(PHYS_SUB_DIR)/$env(PHYS_VERSION)

set dir $base_dir/mlibrary/${version}

prepend-path LD_LIBRARY_PATH $dir/lib

setenv MLIBRARY_VERSION  $version
setenv MLIBRARY $dir
