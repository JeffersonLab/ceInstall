## GLIBRARY environment

# set the version according to user preferences
setenv GLIBRARY_VERSION `getVersion.py GLIBRARY_VERSION $DEFAULT_GLIBRARY_VERSION $overwrite`

set PROPOSEDINSTALL = $JLAB_SOFTWARE/glibrary/$GLIBRARY_VERSION

# set the location according to user preferences
setenv GLIBRARY `getVersion.py GLIBRARY $PROPOSEDINSTALL $overwrite`

# verify installation and print log
checkSoftware.py GLIBRARY $GLIBRARY $PROPOSEDINSTALL $GLIBRARY_VERSION $DEFAULT_GLIBRARY_VERSION $GLIBRARY/lib

# complete setting the environment
setenv LD_LIBRARY_PATH ${GLIBRARY}/lib:${LD_LIBRARY_PATH}
